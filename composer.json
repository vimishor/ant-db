{
    "name":         "gentle/ant-db",
    "type":         "library",
    "description":  "Thin PDO wrapper with a simple mission: make PDO accessible enough for PHP beginners, that they will give up using `mysql_` extension",
    "homepage":     "https://github.com/vimishor/ant-db",
    "keywords":     ["pdo", "wrapper", "mysql"],
    "license":      "MIT",
    "authors": [
        {
            "name":     "Alexandru G.",
            "email":    "alex@gentle.ro",
            "homepage": "http://www.sebi.me"
        }
    ],
    "require": {
        "php": ">=5.3.2"
    },
    "require-dev": {
        "phpunit/phpunit": "4.0.*",
        "phpunit/dbunit": "1.3.*"
    },
    "autoload": {
        "psr-0": {
            "Gentle\\AntDb": "src/"
        }
    }
}
